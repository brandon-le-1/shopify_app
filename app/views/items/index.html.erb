<h1>Inventory</h1>

<table class = 'items'>
        <tr>
            <th>Item Name</th>
            <th>Quantity in Stock</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.quantity %></td>
                <td><%= item.description %></td>
                <td><%= item.price %></td>
                <td><%=link_to "Edit", edit_item_path(item) %></td>
                <td><%=link_to "Delete", show_item_path(item) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>

<%= link_to "Export Inventory to CSV", "/generate_csv" %>
